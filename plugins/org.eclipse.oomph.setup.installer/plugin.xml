<plugin>

   <extension
         id="ProductCatalogGenerator"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.eclipse.oomph.setup.internal.installer.ProductCatalogGenerator">
         </run>
      </application>
   </extension>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.eclipse.oomph.setup.internal.installer.InstallerApplication">
         </run>
      </application>
   </extension>

   <extension
         id="MarketplaceCatalogGenerator"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.eclipse.oomph.setup.internal.installer.MarketplaceCatalogGenerator">
         </run>
      </application>
   </extension>

   <extension id="product" point="org.eclipse.core.runtime.products">
      <product
          name="Eclipse Installer"
          description="%product.description"
          application="org.eclipse.oomph.setup.installer.application">
        <property name="appName" value="Eclipse Installer"/>
        <property
           name="titleImage"
           value="icons/simple/title.png">
        </property>
      </product>
   </extension>

</plugin>
